<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>我的音乐-首页</title>
	<link rel="stylesheet" type="text/css" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">
	<script src="../node_modules/jquery/dist/jquery.min.js"></script>	
</head>
<body>
	<div class="container">
		<div class="page-header">
			<h1>我的音乐网站<small>首页</small> </h1>
			<a href="/addPage" class="addMusic btn btn-success">添加音乐</a>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-7">
					<table class="table table-hover table-striped">
						<thead>
							<th>编号</th>
							<th>歌曲标题</th>
							<th>时长</th>
							<th>歌手</th>
							<th>编辑</th>
							<th>删除</th>
							<th>播放</th>
						</thead>
						<tbody>
							<% musicList.forEach(function(music){ %>
								<tr>
									<td><%=music.id%></td>
									<td><%=music.title%></td>
									<td><%=music.time%></td>
									<td><%=music.singer%></td>
									<td><a href="/editpage/<%=music.id%>" class="edit">编辑</a></td>
									<td><a href="/del/<%=music.id%>" class="del">删除</a></td>
									<td><span src="<%=music.src%>" class="play glyphicon glyphicon-play-circle" style="cursor:pointer"></span></td>
								</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<audio src="" id="audio" autoplay="" controls="controls"></audio>
	</div>
	
			

	<script>
		$(function () {			
			$(".play").on("click",function (e) {
				e=e||window.event;
				e.preventDefault();
	//						alert(this);
				var src = $(this).attr('src');//获取点击的播放按钮src
				$('#audio').attr('src',src);
				console.log($('#audio').attr('src'));
			});
		});
	</script>
</body>
</html>